@page
@model Quizzer.TriviaServer.Pages.Questions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.QuestionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Difficulty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Difficulty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Answers)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach(var answer in Model.Question.Answers)
                {
                    @if(answer.IsCorrect)
                    {
                        <li class="answer-correct">(<span>✔️</span>) @answer.Text</li>

                    }
                    else
                    {
                        <li class="answer-incorrect">(<span>❌</span>) @answer.Text</li>
                    }
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Question?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
